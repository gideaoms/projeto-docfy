{% extends 'layouts/default.njk' %}

{% block body %}
  <div class="wrapper">
    {% include 'partials/header.njk' %}

    <section id="main">
      <div class="container">
        <header>
          <h2>{{ project.title }}</h2>
          <div class="addon">
            <form action="/projects/{{ project.id }}?_method=DELETE" method="post">
              <button type="submit" class="btn btn-danger">Excluir projeto</button>
            </form>
          </div>
        </header>

        <section id="content">
          <nav>
            <div class="sessions">
              {% for section in project.Sections %}
                <a class="{% if currentSection and currentSection.id === section.id %}active{% endif %}" href="/projects/{{ project.id }}/sections/{{ section.id }}/show">{{ section.title }}</a>
              {% endfor %}
            </div>

            <form action="/projects/{{ project.id }}/sections" method="post">
              <input type="text" name="title" placeholder="Nova seção">
              <button type="submit" class="btn"><img src="/img/plus.svg"></button>
            </form>
          </nav>

          {% block section %}{% endblock %}

        </section>
      </div>
    </section>

  </div>
{% endblock %}
